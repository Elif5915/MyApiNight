@model List<MyApiNight.WebUI.Dtos.ResultProductDto>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Ürün Stok</th>
                <th>Ürün Fiyat</th>
                <th></th>

            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductStock</td>
                    <td>@item.ProductPrice</td>
                   
                    <td>
                        <a href="/Products/DeleteProducts/@item.ProductId" class="btn btn-danger">Sil</a>
                        <a href="/Products/UpdateProducts/@item.ProductId" class="btn btn-warning">Güncelle</a>
                    </td>
                </tr>
            }
        </table>
        <a href="/Products/CreateProducts" class="btn btn-info">Yeni Ürün Giriş</a>
    </div>
</form>